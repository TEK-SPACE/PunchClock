@model PunchClock.UI.Web.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}
<div class="col-lg-12 form-horizontal">
    <div class="panel panel-success panel-nomargin">
        <div class="panel-body">Login</div>
    </div>
    <div class="well">
        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <fieldset>
                <div class="form-group">
                    <div class="col-lg-6">
                        @Html.Kendo().TextBoxFor(m => m.UserName).HtmlAttributes(new { @class = "form-control", title = "Username" })
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>
                    <div class="col-lg-6">
                        @Html.Kendo().TextBoxFor(m => m.Password).HtmlAttributes(new { @class = "form-control", type="password", title = "Passwrod" })
                        @Html.ValidationMessageFor(m => m.Password)
                         
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-6">
                        @Html.ActionLink("Register", "Register", "User") if you don't have an account.<br/>
                        @Html.ActionLink("ForgotPassword", "ForgotPassword", "User") click to reset your password.
                    </div>
                <div class="col-lg-6">
                    <input type="submit" value="Login" class="btn btn-primary"/>
                    <input type="submit" value="Cancel" class="btn btn-primary" onclick="location.href = '/';"/>
                    <div class="checkbox slide-to-left">
                    @Html.Kendo().CheckBoxFor(m => m.RememberMe).Enable(true).Label("Remember me?")
                    </div>
                </div>
                </div>
            </fieldset>
        }
    </div>
</div>


