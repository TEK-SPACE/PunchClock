@model IEnumerable<PunchClock.Cms.Model.Article>
@{
    ViewBag.Title = "Article Dashboard";
}

@(Html.Kendo().Grid(Model)
      .Name("Article_Dashboard")
      .Columns(columns =>
      {
          columns.Bound(c => c.Id).Width(150).Hidden(true);
          columns.Bound(c => c.Title).Title("Title").Template(c=>@Html.ActionLink("Edit", "Edit", new { id = c.Id}));
          columns.Bound(c => c.Description);
          columns.Bound(c => c.CategoryId);
          columns.Bound(c => c.Tags);
          //columns.Command(command =>
          //{
          //    command.Edit();
          //    //command.Destroy();
          //});
      })
      //.HtmlAttributes(new { style = "height: 550px;" })
      .Scrollable()
      .Groupable()
      .Sortable()
      .ToolBar(toolbar =>
      {
          toolbar.Create();
          toolbar.Save();
      })
      .Editable(editable => editable.Mode(GridEditMode.InCell))
      .Pageable(pageable => pageable
          .Refresh(true)
          .PageSizes(true)
          .ButtonCount(5))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Model(model =>
          {
              model.Id(x => x.Id);
              model.Field(x => x.Title).Editable(false);
              model.Field(c => c.Description).Editable(false);
              model.Field(c => c.CategoryId).Editable(true);
              model.Field(c => c.Tags).Editable(true);
          })
          .Read(read => read.Action("Read", "Article"))
          .Create(update => update.Action("AddNewArticle", "Article"))
          .Update(update => update.Action("Update", "Article"))
          // .Destroy(update => update.Action("Delete", "Configuration"))
          .PageSize(20)
      )
)