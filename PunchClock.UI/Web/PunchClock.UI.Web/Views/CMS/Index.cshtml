@using PunchClock.UI.Web.Helpers

@{
    ViewBag.Title = "Article";
}


<div class="col-lg-6">
    <div >
        
        <div class="form-group">
            @Html.Label("Title", new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBox("test", "", new { @class = "form-control" })
           
            </div>
        </div>
        <br/><br />

        <div class="form-group">
            @Html.Label("Tags", new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextBox("tags", "", new { @class = "form-control" })
          </div>
        </div>
        <br /><br />
        <div class="form-group">
            @Html.Label("Description", new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.TextArea("test", "", new { @class = "form-control" })
            
            </div>
        </div>
        <br /><br /><br /><br />
        <div class="form-group">
            @Html.Label("Category", new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @{
                    var test = "amb";
                }
                @Html.DropDownList(test, CmsHelpers.GettCategories(), new {@class = "form-control", id = "category"})
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            @Html.Label("IsPublished", new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">

                @Html.CheckBox("Test", "")
            </div>
        </div>
        <br/><br/><br /><br />
        <div class="col-lg-10 col-lg-offset-2">
            <input type="submit" value="Save as Draft" class="btn btn-primary" />
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
     
        
        
    </div>
</div>