@model IEnumerable<PunchClock.Configuration.Model.AppSetting>
@{
    ViewBag.Title = "Configuration";
}

@(Html.Kendo().Grid<PunchClock.Configuration.Model.AppSetting>()
      .Name("ConfigurationGrid")
      .Columns(columns =>
      {
          columns.Bound(c => c.Module.Name).ClientTemplate(
              @"<div class='customer-photo'
                        style='background-image: url(../content/web/Customers/#:data.CustomerID#.jpg);'></div>
                    <div class='customer-name'>#: ContactName #</div>")
              .Width(240);
          columns.Bound(c => c.Key);
          columns.Bound(c => c.Value);
      })
      .HtmlAttributes(new { style = "height: 550px;" })
      .Scrollable()
      .Groupable()
      .Sortable()
      .Pageable(pageable => pageable
          .Refresh(true)
          .PageSizes(true)
          .ButtonCount(5))
      .DataSource(dataSource => dataSource
          .Ajax()
          .Read(read => read.Action("Read", "Configuration"))
          .PageSize(20)
      )
)