@using Microsoft.AspNet.Identity
@using PunchClock.UI.Web.Helpers
@model PunchClock.Ticketing.Model.Ticket
@{
    ViewBag.Title = "New Ticket";
}
<hgroup class="title">
    <h1>@ViewBag.Title</h1>
    <h2>@Html.Raw((string)ViewBag.Message)</h2>
</hgroup>
<div class="clearFloat"></div>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="col-lg-12 form-horizontal">
        <div class="well">
            <fieldset>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ProjectId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().ComboBoxFor(model => model.ProjectId).DataTextField("Name").DataValueField("Id").DataSource(x => x.Read("Projects","Ticket"))
                        @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().TextBoxFor(model => model.Title).Value("").HtmlAttributes(new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().EditorFor(model => model.Description).HtmlAttributes(new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StatusId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().ComboBoxFor(model => model.StatusId).DataTextField("Name").DataValueField("Id").DataSource(x => x.Read("Status", "Ticket"))
                        @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TypeId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().ComboBoxFor(model => model.TypeId).DataTextField("Name").DataValueField("Id").DataSource(x=>x.Read("Types","Ticket"))
                        @Html.ValidationMessageFor(model => model.TypeId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PriorityId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().ComboBoxFor(model => model.PriorityId).DataTextField("Name").DataValueField("Id").DataSource(x => x.Read("Priorities","Ticket"))
                        @Html.ValidationMessageFor(model => model.PriorityId, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @Html.LabelFor(model => model.RequestorId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().ComboBoxFor(model => model.RequestorId).DataTextField("DisplayName").DataValueField("Id").DataSource(x => x.Read("All", "User"))
                        @Html.ValidationMessageFor(model => model.RequestorId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.AssignedToId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().ComboBoxFor(model => model.AssignedToId).DataTextField("DisplayName").DataValueField("Id").DataSource(x => x.Read("All", "User"))
                        @Html.ValidationMessageFor(model => model.AssignedToId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.NotifyTo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().MultiSelectFor(model => model.NotifyTo).DataTextField("DisplayName").DataValueField("Id").DataSource(x=>x.Read("All","User"))
                        @Html.ValidationMessageFor(model => model.NotifyTo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().ComboBoxFor(model => model.CategoryId).DataTextField("Name").DataValueField("Id").DataSource(x=>x.Read("Categories","Ticket"))
                        @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-lg-10 col-lg-offset-2">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                    <input type="submit" value="Cancel" class="btn btn-primary" onclick="location.href = '/Ticket';" />
                </div>
            </fieldset>
        </div>
    </div>
}