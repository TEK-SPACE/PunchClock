@model PunchClock.UI.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
@using (Html.BeginForm("ForgotPassword", "User", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="col-lg-12 form-horizontal">
        <div class="panel panel-success panel-nomargin">
            <div class="panel-body">Enter your registered email to reset password</div>
        </div>
        <div class="well">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            <fieldset>
                <legend>@ViewBag.Message</legend>
                <div class="form-group">
                    <div class="col-lg-6">
                        @Html.Kendo().TextBoxFor(m => m.Email).HtmlAttributes(new { @class = "form-control", title = "Email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>
                    <div class="col-lg-6">
                        <input type="submit" value="Reset" class="btn btn-primary" />
                        <input type="submit" value="Cancel" class="btn btn-primary" onclick="location.href = '/';" />
                    </div>
                </div>
            </fieldset>

        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
