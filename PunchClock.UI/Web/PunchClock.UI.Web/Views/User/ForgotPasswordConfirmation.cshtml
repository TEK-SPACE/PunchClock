@{
    ViewBag.Title = "Forgot Password Confirmation";
}

<div class="col-lg-12 form-horizontal">
    <div class="panel panel-success panel-nomargin">
        <div class="panel-body">Password Reset</div>
    </div>
    <div class="well">
            <fieldset>
                <div class="form-group">
                    <div class="col-lg-6">
                        <p>
                            Please check your email for instructions to reset your password. @Html.ActionLink("Login Now", "Login", "Account")
                        </p>
                    </div>
                </div>
            </fieldset>
    </div>
</div>