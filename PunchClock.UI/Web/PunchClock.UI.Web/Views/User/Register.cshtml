<div class="col-lg-6">
    <div class="well bs-component">
        @using (Ajax.BeginForm("Register", "User", null,
                new AjaxOptions { OnSuccess = "postResponseRegistration" },
                new { @class = "form-horizontal" }))
        {
            <fieldset>
                <legend>@ViewBag.Title</legend>
                <div class="form-group">
                    @Html.LabelFor(x => x.FirstName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.FirstName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.LastName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.LastName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Email, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Telephone, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.Telephone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Telephone)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.UserName, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.RegistrationCode, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.TextBoxFor(x => x.RegistrationCode, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RegistrationCode)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.UserTypeId, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(x => x.UserTypeId, (IEnumerable<SelectListItem>)ViewBag.UserTypes, "--Select--", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.UserTypeId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.RegisteredTimeZone, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(x => x.RegisteredTimeZone, (IEnumerable<SelectListItem>)Model.TimezonesList, "--Select--", new { @class = "k-dropdownTimeZones form-control" })
                        @Html.ValidationMessageFor(x => x.RegisteredTimeZone)
                    </div>
                </div>
                <div class="col-lg-10 col-lg-offset-2">
                    <input type="submit" value="Sign up" class="btn btn-primary" />
                </div>
            </fieldset>
        }
    </div>
</div>
